<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLogout">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/trash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/delete_icon"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="13sp" />

    </RelativeLayout>
<RelativeLayout
                android:id="@+id/relloy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLite">
<LinearLayout
    android:id="@+id/textx"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="32dp"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/time"
        android:text="8"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/hrs"
        android:text="@string/hrs"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_chat_user_name"
        />
</LinearLayout>


    <TextView
        android:id="@+id/activty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/textx"
        android:layout_toStartOf="@id/extra"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"
/>

    <TextView
        android:id="@+id/descrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:maxLength="150"
        android:minLines="1"
        android:maxLines="1"
        android:gravity="center"
        android:layout_below="@+id/activty"
        android:layout_toEndOf="@id/textx"
        android:layout_toStartOf="@id/extra"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_small_text"
        />

        <ImageView
            android:id="@+id/extra"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/extratime"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    <View
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"/>

</RelativeLayout>
</FrameLayout>